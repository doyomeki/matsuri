.event
  .time_table
    %img{src: "/assets/chochin.png"}
    Time Table
    %img{src: "/assets/chochin.png"}
  = t "time_table.select_content_message"
  = form_tag({action: "update", id: @event.id}, {method: :put}) do
    %table.time_table
      %tr= render :partial => @schedules, :spacer_template => "schedules/separator"

    - if user_signed_in?
      .save_button
        = submit_tag I18n.t("actions.commit"), class: "btn btn-large btn-warning"
    - else
      .login_button
        = link_to "login", new_user_session_path, class: "btn"
